<h2>Log in</h2>
<form>
	<table>
		<tr>
			<th>
				<%= label_tag :name, 'I am' %>
			</th>
			<td>
				<%= text_field_tag :name, params[:name] %>
			</td>
		</tr>
		<tr>
			<th>
				<%= label_tag :password, 'and my password is' %>
			</th>
			<td>
				<%= password_field_tag :password, params[:password] %>
			</td>
		</tr>
		<tr>
			<th><!-- log in --></th>
			<td>
				<%= submit_tag 'Log in' %>
			</td>
		</tr>
	</table>
</form>
